#####################
### SHARED CONFIG ###
#####################
export POSIX="$HOME/.config/posix" # Works with sh/bash/zsh
export ZSH="$HOME/.config/zsh"
export SETUP="$ZSH/setup"

command_exists() {
  command -v "$@" >/dev/null 2>&1
}

# New config
# Load color formatter
. $HOME/.config/posix/print_format.sh

# for file in "$ZSH"/lib/*.zsh(N); do
#   source $file
# done

source $ZSH/starship.zsh
source $ZSH/locale.zsh
source $ZSH/lib/history.zsh
source $ZSH/lib/completion.zsh
source $ZSH/lib/git.zsh
source $ZSH/lib/directories.zsh

# Set neovim as editor
command_exists nvim || {
  echo "$(bold)$(red) Neovim is not installed!$(reset)"
  exit 1
}
export EDITOR=nvim

# Source the shared aliases file
if [ -f $POSIX/aliases ]; then
    source $POSIX/aliases
fi

# Install/Activate Mise
source $SETUP/mise.zsh
if [ $? -eq 0 ]; then
    eval "$(~/.local/bin/mise activate zsh)"
else
    echo "$(bold)$(red)Mise Install Script failed.$(reset)"
    exit 1
fi

# Go-lang-specific configuration
export GOPATH="$HOME/go"
export PATH="$PATH:$GOPATH/bin"

# FZF Integration
{{ if (lookPath "fzf") }}
source <(fzf --zsh)
{{ end }}

# Zoxide 
if command -v zoxide &> /dev/null; then
  eval "$(zoxide init zsh)"
fi

# Tmux
source $POSIX/tmux

# Enable vi mode
bindkey -v

# Custom LS_COLORS settings
#export LS_COLORS="di=1;34:fi=0;37:ln=36:pi=33:so=32:bd=46;34:cd=46;34:or=31;43:mi=05;37;41"

case "$(uname -s)" in
Darwin)
#####################
### MacOS CONFIG  ###
#####################
# Homebrew Ruby
export PATH="/opt/homebrew/opt/ruby/bin:$PATH"
# Main Homebrew path 
export BREW_PATH="/opt/homebrew/bin"
export PATH=$BREW_PATH:$PATH
# Iterm2 shell integration
if command_exists "/Applications/iTerm.app/Contents/MacOS/iTerm2"; then
source $SETUP/iterm2.zsh
fi
# Ignore DS_Store files in git
if [[ -x $HOME/.config/git/ignore ]]; then
    if command_exists git; then
      git config --global core.excludesfile $HOME/.config/git/ignore
    fi
fi
;;
Linux)
#####################
### LINUX CONFIG  ###
#####################
echo "Shared linux config"
if [ -f /etc/os-release ]; then 
{
. /etc/os-release
case "$ID" in
debian|ubuntu)
echo "OS=Linux Distro=Debian or Ubuntu - ($ID)"
;;
fedora)
echo "OS=Linux Distro=Fedora"
;;
arch)
echo "OS=Linux Distro=Arch"
;;
*)
echo "OS=Linux Distro=Other -> ($ID)"
;;
esac

} fi
;;
*)
echo "OS=Unknown ($os)"
exit 1
;;
esac

#####################
## MOBILE DEV MAC ###
#####################
if [[ $HOST == 'euge-mini' ]]; then
{
#-- Android Studio --
if command_exists "/Applications/Android Studio.app/Contents/MacOS/studio"; then
source $SETUP/android_studio.zsh
fi

#-- LM Studio --
if command_exists "/Applications/LM Studio.app/Contents/MacOS/LM Studio"; then
export PATH="$PATH:$HOME/.lmstudio/bin"
